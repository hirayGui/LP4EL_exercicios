@model IEnumerable<Clinica.Models.Consulta>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Consultas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medico.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Paciente.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Medico.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Paciente.Nome)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {IdMedico = item.IdMedico, IdPaciente = item.IdPaciente}) |
            @Html.ActionLink("Details", "Details", new { IdMedico = item.IdMedico, IdPaciente = item.IdPaciente }) |
            @Html.ActionLink("Delete", "Delete", new { IdMedico = item.IdMedico, IdPaciente = item.IdPaciente })
        </td>
    </tr>
}

</table>
